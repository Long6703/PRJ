<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>ExamSchedule</display-name>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>Controller.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDetail</servlet-name>
        <servlet-class>Controller.UserDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePass</servlet-name>
        <servlet-class>Controller.ChangePass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>View_Exam_Schedule</servlet-name>
        <servlet-class>Controller.View_Exam_Schedule</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register_exams</servlet-name>
        <servlet-class>Controller.Register_exams</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Create_Exam</servlet-name>
        <servlet-class>Controller.Create_Exam</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Edit_exam</servlet-name>
        <servlet-class>Controller.Edit_exam</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateExam</servlet-name>
        <servlet-class>Controller.UpdateExam</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Delete_Exam</servlet-name>
        <servlet-class>Controller.Delete_Exam</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Exam_registration_list</servlet-name>
        <servlet-class>Controller.Exam_registration_list</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>Controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AutoRedirectController</servlet-name>
        <servlet-class>Controller.AutoRedirectController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgotpasswordController</servlet-name>
        <servlet-class>Controller.ForgotpasswordController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDetail</servlet-name>
        <url-pattern>/userdetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePass</servlet-name>
        <url-pattern>/changepassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>View_Exam_Schedule</servlet-name>
        <url-pattern>/viewexam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register_exams</servlet-name>
        <url-pattern>/registerexam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Create_Exam</servlet-name>
        <url-pattern>/createexam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Edit_exam</servlet-name>
        <url-pattern>/editexam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateExam</servlet-name>
        <url-pattern>/updateexam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Delete_Exam</servlet-name>
        <url-pattern>/deleteexam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Exam_registration_list</servlet-name>
        <url-pattern>/examregistrationlist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AutoRedirectController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotpasswordController</servlet-name>
        <url-pattern>/forgotpassword</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
